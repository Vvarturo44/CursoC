//Realiza un codigo en c que permita el calculo del area de las figuras geometricas... TRIANGULO, RECTANGULO, CUADRADO Y CIRCULO

#include <stdio.h>
#include <stdlib.h>
#include <math.h>

float areaTriangulo(float base, float altura) {
    return (base * altura) / 2;
}

float areaRectangulo(float largo, float ancho) {
    return largo * ancho;
}

float areaCuadrado(float lado) {
    return lado * lado;
}

float areaCirculo(float radio) {
    return M_PI * radio * radio;
}


int main() {
    int opcion;
    float resultado, base, altura, largo, ancho, lado, radio;

    printf("Seleccione una figura geometrica:\n");
    printf("1. Triangulo\n");
    printf("2. Rectangulo\n");
    printf("3. Cuadrado\n");
    printf("4. Circulo\n");
    printf("Opcion: ");
    scanf("%d", &opcion);

    switch(opcion) {
        case 1:
            printf("Ingrese la base del triangulo: ");
            scanf("%f", &base);
            printf("Ingrese la altura del triangulo: ");
            scanf("%f", &altura);
            resultado = areaTriangulo(base, altura);
            printf("El area del triangulo es: %.2f\n", resultado);
            break;
        case 2:
            printf("Ingrese la base del rectangulo: ");
            scanf("%f", &largo);
            printf("Ingrese el ancho del rectangulo: ");
            scanf("%f", &ancho);
            resultado = areaRectangulo(largo, ancho);
            printf("El area del rectángulo es: %.2f\n", resultado);
            break;
        case 3:
            printf("Ingrese un lado del cuadrado: ");
            scanf("%f", &lado);
            resultado = areaCuadrado(lado);
            printf("El area del cuadrado es: %.2f\n", resultado);
            break;
        case 4:
            printf("Ingrese el radio del circulo: ");
            scanf("%f", &radio);
            resultado = areaCirculo(radio);
            printf("El area del circulo es: %.2f en funcion de su radio", resultado);
            break;
        default:
            printf("Opción no valida.\n");
    }

    return 0;
}



/*
    Como opera un switch:

    switch(variableCondicion){
        case1:
            instruccion 1;
            break;
        case2:
            instruccion 2;
            break;
        case3:
            instruccion 3;
            break;
        casen:
            instruccion n;
            break;
        default:
    }
*/
